{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [
    { "path": "../common" }
  ]
}